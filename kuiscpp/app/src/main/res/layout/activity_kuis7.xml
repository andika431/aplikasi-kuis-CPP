<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kuis7"
    android:orientation="vertical"
    android:background="@drawable/bg2">
    <TextView
        android:id="@+id/tvnokuis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1/n"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingLeft="60px"
        android:layout_marginTop="90sp"/>
    <TextView
        android:id="@+id/tvscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : 0"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="50px"
        android:paddingLeft="60px"
        android:layout_marginTop="20px"/>
    <TextView
        android:id="@+id/tvkuis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Siapakah penemu bahasa pemrograman C++"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:paddingHorizontal="20sp"
        android:layout_marginTop="30sp"/>
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingHorizontal="20sp"
        android:layout_marginTop="20sp">
        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adolf Hitler"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kang shyomay"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yoga (yoo gak tahu)"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bjarne Stroustrup"
            android:textColor="@color/black"
            android:textSize="15sp"/>
    </RadioGroup>
    <Button
        android:id="@+id/btnnext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/white"
        android:backgroundTint="@color/biru"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10sp"/>

</LinearLayout>